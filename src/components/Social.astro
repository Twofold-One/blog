---
const { platform, username, iconClass } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`} target="_blank"
  ><i class={iconClass}></i>
</a>

<style>
  a {
    padding: 0.5rem 1 rem;
    color: black;
    text-decoration: none;
    font-size: 1.5rem;
  }
</style>

<script src="https://kit.fontawesome.com/3f1e87a825.js" crossorigin="anonymous"
></script>
