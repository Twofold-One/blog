---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="blogContent">
    <div class="postInfo">
      <p class="desc"><em>{frontmatter.description}</em></p>
      <p class="pubDate">Published on: {frontmatter.pubDate.slice(0, 10)}</p>
      <p class="author">Written by {frontmatter.author}</p>
    </div>
    <figure>
      <img
        src={frontmatter.image.url}
        width="300"
        alt={frontmatter.image.alt}
      />
      <figcaption>{frontmatter.image.desc}</figcaption>
    </figure>
    <div class="tags">
      {
        frontmatter.tags.map((tag) => (
          <p class="tag">
            <a href={`/tags/${tag}`}>{tag}</a>
          </p>
        ))
      }
    </div>
    <div class="postContent">
      <slot />
    </div>
  </div>
</BaseLayout>

<style>
  .blogContent {
    display: flex;
    flex-direction: column;
  }

  .blogContent div {
    margin: 1rem 0;
  }

  .desc {
    grid-area: desc;
  }

  .pubDate {
    grid-area: pubDate;
  }

  .author {
    grid-area: author;
  }

  .postInfo {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
    grid-template-areas:
      "desc desc"
      "pubDate author";
    justify-self: center;
  }

  .postInfo p {
    opacity: 70%;
    padding: 0.5rem 0.5rem 0.5rem 0;
  }

  figure {
    diplay: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    padding: 20px;
  }

  img {
    margin: 10px;
  }

  figcaption {
    text-align: center;
    background-color: #39796b;
    color: white;
  }

  a {
    color: #00539f;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25rem;
    border: dotted 1px #39796b;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    background-color: white;
    transition: background-color 1s;
  }

  .tag:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .postContent {
    text-align: justify;
  }

  .postContent ol {
    list-style-position: inside;
    background-color: black;
  }
</style>
