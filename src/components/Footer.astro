---
import Social from "./Social.astro";

const dayOfWeekName = new Date().toLocaleString("default", {
  weekday: "long",
});
---

<style>
  footer {
    background-color: #39796b;
    color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    flex-shrink: 0;
  }
  div {
    margin: 0;
    padding: 0;
    opacity: 80%;
    margin: 0.5rem 1rem;
  }
  div a {
    text-decoration: none;
    color: inherit;
  }

  .link:hover {
    text-shadow: 0 0 5px white;
  }
</style>

<footer>
  <div>
    <Social
      platform="github"
      username="twofold-one"
      iconClass="fa-brands fa-github"
    />
    <p>Â© Copyright 2022 Twofold-One (Evan Geras)</p>
    <p class="link"><a href="/disclaimer/">Disclaimer</a></p>
  </div>
  <div id="weekDay">Enjoy the rest of your {dayOfWeekName}!</div>
</footer>
