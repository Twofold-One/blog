---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <Hamburger />
    <Navigation />
    <ThemeIcon />
  </nav>
</header>

<style>
  header {
    background-color: #004d40;
    width: 100%;
    border-radius: 0 0 5px 5px;
  }
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
</style>
